# {{ ansible_managed }}
[Unit]
Description=Print Nanny Metadata Service
After=network.target network-online.target ansible-collection.service
Wants=network.service network-online.target ansible-collection.service

[Service]
Type=oneshot
RuntimeDirectory={{ printnanny_user }}
RuntimeDirectoryPreserve=yes
ConfigurationDirectory={{ printnanny_user }}
ExecStart={{ updater_venv }}/bin/ansible-playbook \
    bitsyai.rpi.printnanny.metadata
Restart=on-failure

[Install]
WantedBy=multi-user.target