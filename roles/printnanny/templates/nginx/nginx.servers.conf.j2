server {
    listen 443;
    server_name $hostname;
    ssl on;
    ssl_certificate     {{ printnanny_ssl_cert }};
    ssl_certificate_key {{ printnanny_ssl_key }};
    ssl_protocols       {{ printnanny_ssl_protocols }};
    ssl_ciphers         {{ printnanny_ssl_ciphers }}; 
    include /etc/nginx/conf.d/*.locations;

    error_log stderr;
    proxy_busy_buffers_size   512k;
    proxy_buffers   4 512k;
    proxy_buffer_size   256k;
    {% if printnanny_nginx_log is defined %}
    access_log {{ printnanny_nginx_log }};
    error_log {{ printnanny_nginx_log }}.error;
    {% endif %} 
}
server {
    listen 80;
    server_name $hostname;
    include /etc/nginx/conf.d/*.locations;
    proxy_busy_buffers_size   512k;
    proxy_buffers   4 512k;
    proxy_buffer_size   256k;
    error_log stderr;
    {% if printnanny_nginx_log is defined %}
    access_log {{ printnanny_nginx_log }};
    error_log {{ printnanny_nginx_log }}.error;
    {% endif %
}
