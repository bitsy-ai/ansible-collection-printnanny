[Unit]
Description=Gstreamer RTP Camera Sink
After=network.target network-online.target
Wants=network.target network-online.target
PartOf=printnanny.target

[Service]
Type=simple
SyslogIdentifier=printnanny-monitor
User={{ printnanny_user }}
ExecStart=/usr/local/bin/printnanny-monitor
Restart=on-failure
RestartSec=10

{% if printnanny_cam_log is defined %}
StandardOutput=file:{{ printnanny_cam_log }}.stdout
StandardError=file:{{ printnanny_cam_log }}.stderr
{% endif %}

[Install]
WantedBy=multi-user.target