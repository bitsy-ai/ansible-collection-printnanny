# {{ ansible_managed }}
[Unit]
Description=Print Nanny Metadata Service
After=network.target network-online.target ansible-collection.service
Wants=network.service network-online.target ansible-collection.service

[Service]
Type=oneshot
SyslogIdentifier=printnanny-metadata
RuntimeDirectory={{ printnanny_user }}
RuntimeDirectoryPreserve=yes
ConfigurationDirectory={{ printnanny_user }}
ExecStart=/usr/bin/flock -F {{ ansible_lockfile }} \
    {{ updater_venv }}/bin/ansible-playbook \
    {% if printnanny_loglevel == 'info' %}
    -vv \
    {% elif printnanny_loglevel == 'debug' %}
    -vvv \
    {% else %}
    -v \
    {% endif %}
    bitsyai.rpi.printnanny.metadata --tags metadata
ExecStartPost=-/usr/bin/flock -F {{ ansible_lockfile }} \
    /usr/bin/rm {{ ansible_lockfile }}
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target