# {{ ansible_managed }}
[Unit]
Description=Print Nanny Update Service
After=network.target network-online.target printnanny-metadata.target
Wants=network.target network-online.target printnanny-metadata.target

[Service]
SyslogIdentifier=printnanny-update
Type=oneshot


ExecStartPre=/usr/bin/flock {{ ansible_lockfile }}
ExecStartPre={{ updater_venv }}/bin/ansible-galaxy \
    collection install --upgrade {{ updater_collection_url }}
{% for playbook in updater_playbooks %}
ExecStart={{ updater_venv }}/bin/ansible-playbook \
    {% if printnanny_loglevel == 'info' %}
    -vv \
    {% elif printnanny_loglevel == 'debug' %}
    -vvv \
    {% else %}
    -v \
    {% endif %}
    --skip-tags "packer" \
    {{ playbook }}
{% endfor %}
ExecStartPost=-/usr/bin/flock -u {{ ansible_lockfile }}

[Install]
WantedBy=multi-user.target
