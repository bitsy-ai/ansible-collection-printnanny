[Unit]
Description=PrintNanny Remote Command Handler
After=network.target network-online.target printnanny-ansible-collection.service printnanny-firstboot.service printnanny-metadata.service
Wants=network.target network-online.target printnanny-ansible-collection.service printnanny-firstboot.service printnanny-metadata.service
PartOf=printnanny.target

[Service]
Type=simple
SyslogIdentifier=printnanny-cmd
RuntimeDirectory={{ printnanny_user }}
RuntimeDirectoryPreserve=yes
ConfigurationDirectory={{ printnanny_user }}
EnvironmentFile=-{{ printnanny_env }}
User={{ printnanny_user }}
ExecStart=/usr/bin/flock --verbose -n {{ ansible_lockfile }} \
    {{ updater_venv }}/bin/ansible-playbook \
    {% if printnanny_loglevel == 'info' %}
    -vv \
    {% elif printnanny_loglevel == 'debug' %}
    -vvv \
    {% else %}
    -v \
    {% endif %}
    bitsyai.printnanny.cmd.queued \
     --tags "cmd"
Restart=on-failure
RestartSec=10
[Install]
WantedBy=multi-user.target
