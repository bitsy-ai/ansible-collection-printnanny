name = "{{ printnanny_profile }}"
install_dir = "{{ printnanny_profile_dir }}"
runtime_dir = "{{ printnanny_runtime_dir }}"
events_socket = "{{ printnanny_runtime_dir }}/events.sock"

[ansible]
venv_dir = "{{ printnanny_ansible_dir }}/venv"
collection_name = "bitsyai.printnanny"
collection_version = "{{ printnanny_collection_version }}"

[api]
base_path = "{{ printnanny_api_url }}"

[cmd]
queue_dir = "{{ printnanny_cmd_queue_dir }}"
success_dir = "{{ printnanny_cmd_success_dir }}"
error_dir = "{{ printnanny_cmd_error_dir }}"

[janus_local]
id = 0
device_id = 0
api_domain = "{{ janus_local_api_domain }}"
rtp_domain = "{{ janus_local_api_domain }}"
admin_secret = "{{ lookup('password', janus_local_admin_secret_file, length=32 ) }}"
token = "{{ lookup('password', janus_local_token_file, length=32 ) }}"
admin_base_path = "{{ janus_conf['janus.transport.http'].admin_base_path }}"
admin_port = {{ janus_conf['janus.transport.http'].admin_http_port }}
admin_url = "http://{{ janus_local_api_domain }}:{{ janus_conf['janus.transport.http'].admin_http_port }}{{ janus_conf['janus.transport.http'].admin_base_path }}"
api_port = {{ janus_conf['janus.transport.http'].http_port }}
api_url = "http://{{ janus_local_api_domain }}:{{ janus_conf['janus.transport.http'].http_port}}{{ janus_conf['janus.transport.http'].base_path }}"
websockets_url = "ws://{{ janus_local_api_domain }}:{{ janus_conf['janus.transport.websockets'].ws_port }}"
websocket_port = {{ janus_conf['janus.transport.websockets'].ws_port }}
created_dt = "{{ ansible_date_time.iso8601 }}"
updated_dt = "{{ ansible_date_time.iso8601 }}"
config_type = "local"
active = "{{ janus_local_enabled }}"
secret = "{{ janus_local_streaming_secret }}"
pin = "{{ janus_local_streaming_pin }}"
info = "{}"
rtp_port = {{ janus_local_rtp_port }}

[mqtt]
private_key = "{{ printnanny_ec_private_key }}"
public_key = "{{ printnanny_ec_public_key }}"
ca_certs = [
    "{{ printnanny_cacerts }}/{{ gcp_lts_ca_primary | basename }}",
    "{{ printnanny_cacerts }}/{{ gcp_lts_ca_backup | basename }}"
]
fingerprint = "{{ lookup('file', printnanny_ec_fingerprint_md5) }}"
fingerprint_algorithm = "md5"
cipher = "secp256r1"
length = 4096
